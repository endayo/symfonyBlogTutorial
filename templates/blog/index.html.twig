{% extends 'base.html.twig' %}

{% block content %}
  <h1>Blog posts</h1>
  {% if posts | length > 0 %}
    <table class="table" border="1">
        <thead>
        <tr>
          <td>ID</td>
          <td>タイトル</td>
          <td>作成日</td>
          <td>操作</td>{# ここを追記 #}
        </tr>
        </thead>
        <tbody>
          {# posts配列をループして、投稿記事の情報を表示 #}
          {% for post in posts %}
              <tr>
                <td><a href="{{ path('blog_show', {id: post.id}) }}">{{ post.id }}</a></td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt|date('Y/m/d H:i') }}</td>
                <td>
                  {# ここに編集ボタン追加 #}
                  <a class="btn btn-info" href="{{ path('blog_edit', {'id': post.id}) }}">編集</a>
                  <a class="btn btn-danger" href="{{ path('blog_delete', {'id':post.id}) }}">削除</a>{# ここを追記 #}
                </td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
  {% else %}
    <p>No Posts</p>
  {% endif %}
{% endblock %}